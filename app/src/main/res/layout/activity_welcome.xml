<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_primary"
    android:gravity="center"
    android:padding="32dp">

    <!-- Logo with Circle Background -->
    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="70dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SubMe"
                android:textColor="#4CAF50"
                android:textSize="32sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- App Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Chào mừng đến với"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:alpha="0.9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="SubMe"
        android:textColor="@color/white"
        android:textSize="42sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium" />

    <!-- Tagline -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Quản lý đăng ký thông minh"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:alpha="0.85"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Tiết kiệm thời gian &amp; chi phí"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:alpha="0.75"
        android:gravity="center" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Get Started Button -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <Button
            android:id="@+id/btnGetStarted"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:text="BẮT ĐẦU"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:textStyle="bold"
            android:elevation="0dp" />

    </androidx.cardview.widget.CardView>

    <!-- Login Button -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_button_secondary"
        android:text="ĐĂNG NHẬP"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:elevation="0dp" />

    <!-- Terms -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Bằng cách tiếp tục, bạn đồng ý với\nĐiều khoản &amp; Chính sách của chúng tôi"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:alpha="0.7"
        android:gravity="center" />

</LinearLayout>

